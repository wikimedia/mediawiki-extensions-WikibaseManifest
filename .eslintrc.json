{
	"root": true,
	"extends": [
		"wikimedia/server",
		"wikimedia/node",
		"wikimedia/language/es2017",
		"wikimedia/mediawiki"
	],
	"env": {
		"mocha": true
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"brace-style": "warn",
		"camelcase": "warn",
		"eqeqeq": "warn",
		"max-statements-per-line": "warn",
		"new-cap": "warn",
		"no-bitwise": "warn",
		"no-constant-condition": "warn",
		"no-dupe-else-if": "warn",
		"no-dupe-keys": "warn",
		"no-empty": "warn",
		"no-implicit-globals": "warn",
		"no-mixed-spaces-and-tabs": "warn",
		"no-redeclare": "warn",
		"no-shadow": "warn",
		"no-tabs": "warn",
		"no-undef": "warn",
		"no-underscore-dangle": "warn",
		"no-unreachable": "warn",
		"no-unused-expressions": "warn",
		"no-unused-vars": "warn",
		"no-use-before-define": "warn",
		"no-useless-concat": "warn",
		"no-var": "warn",
		"semi-style": "warn",
		"strict": "warn",
		"block-scoped-var": "warn",
		"no-constant-binary-expression": "warn",
		"yml/no-empty-mapping-value": "warn"
	}
}
